{
  "permissions": {
    "allow": [
      "Read(path:**)",
      {{#if allow_write}}
      "Edit(path:**)",
      "Write(path:**)",
      {{/if}}
      "Glob(path:**)",
      {{#if allow_shell}}
      "Bash(grep:*)",
      "Bash(wc:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(git:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      {{/if}}
      "WebSearch",
      "WebFetch"
    ]
  }
}
